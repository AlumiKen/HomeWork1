@model IPagedList<homework1.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

@section scripts {
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<h2>客戶資料管理</h2>

@using (Html.BeginForm("Index", "客戶資料", FormMethod.Post))
{
<p>    
    <table>
        <tr>
            <td>
                @Html.ActionLink("Create New", "Create") | 
            </td>
            <td>
                關鍵字 : 
            </td>
            <td>                                
                    <table>
                        <tr>
                            <td>
                                @Html.TextBox("keyword")
                            </td>
                            <td>
                                <table>
                                    <tr>
                                        <td>
                                            | 客戶分類: 
                                        </td>
                                        <td>
                                            @Html.DropDownList("客戶分類Id", null, "全部", htmlAttributes: new { @class = "form-control" })
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td>
                                <input type="submit" value="搜尋" class="btn btn-default" />
                            </td>                            
                        </tr>
                    </table>
            </td>
            <td>
                @Html.ActionLink("匯出清單", "匯出客戶資料", "客戶資料")
            </td>
        </tr>
     </table>        
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().統一編號)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().傳真)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().地址)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().Account)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().客戶分類.客戶分類名稱)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.客戶分類.客戶分類名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page , keyword = TempData["keyword"],客戶分類Id = TempData["客戶分類Id"]}))
}